<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<View
    android:layout_marginTop="30dp"
    android:id="@+id/view_left"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="150dp"
    android:layout_marginLeft="20dp"
    android:background="@color/gray_qian1"
    android:layout_height="1dp"/>
    <TextView
        android:id="@+id/share_txt"
        android:textSize="22sp"
        android:textColor="@color/gray_qian1"
        android:text="分享"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="150dp"
        android:layout_marginRight="20dp"
        android:background="@color/gray_qian1"
        android:layout_height="1dp"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/view_left"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/view_left"
            android:src="@drawable/xinlangx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints" />
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/view_left"
            android:src="@drawable/weatch_per"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints" />
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/view_left"
            android:src="@drawable/py_quan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints" />
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/view_left"
            android:src="@drawable/more"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>